---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout title="Jurnals | Gmd Popper">
  <div class="container" style="padding: 4rem 2rem;">
    <h1>
      <i18n lang="en" data-i18n="blog-title">Jurnals</i18n>
      <i18n lang="tr" hidden data-i18n="blog-title">Yaz覺lar</i18n>
    </h1>
    <div class="post-list">
      {
        sortedPosts.map((post) => {
          const dateEn = post.data.publishDate.toLocaleDateString("en-US");
          const dateTr = post.data.publishDate.toLocaleDateString("tr-TR");

          const postSlug = post.slug ?? post.id;

          return (
            <article class="post-item">
              {/* Stretched Link for Clickability */}
              <a href={`/blog/${postSlug}`} class="post-link">
                <span class="sr-only">
                  <i18n lang="en" data-i18n="blog-read">
                    Read {post.data.title.en}
                  </i18n>
                  {
                    post.data.title.tr && (
                      <i18n lang="tr" hidden data-i18n="blog-read">
                        {post.data.title.tr} yaz覺s覺n覺 oku
                      </i18n>
                    )
                  }
                </span>
              </a>

              <div class="post-content">
                <h2>
                  <i18n lang="en" data-i18n="blog-post-title">
                    {post.data.title.en}
                  </i18n>
                  {
                    post.data.title.tr && (
                      <i18n lang="tr" hidden data-i18n="blog-post-title">
                        {post.data.title.tr}
                      </i18n>
                    )
                  }
                </h2>
                <p>
                  <i18n lang="en" data-i18n="blog-post-desc">
                    {post.data.description.en}
                  </i18n>
                  {
                    post.data.description.tr && (
                      <i18n lang="tr" hidden data-i18n="blog-post-desc">
                        {post.data.description.tr}
                      </i18n>
                    )
                  }
                </p>
                <div class="meta">
                  <span class="date">
                    <i18n lang="en" data-i18n="blog-post-date">
                      {dateEn}
                    </i18n>
                    <i18n lang="tr" hidden data-i18n="blog-post-date">
                      {dateTr}
                    </i18n>
                  </span>
                </div>
              </div>
            </article>
          );
        })
      }
    </div>
  </div>
</Layout>

<style>
  .post-list {
    max-width: 800px;
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-item {
    position: relative; /* Context for stretched link */
    padding: 2.5rem;

    /* Glass / Card Styles */
    background: var(--color-white-03);
    background: linear-gradient(
      145deg,
      var(--color-white-05) 0%,
      var(--color-white-01) 100%
    );
    border: 1px solid var(--color-white-10);
    border-top: 1px solid var(--color-white-15);
    border-radius: var(--radius-lg);

    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease,
      background 0.3s;
  }

  .post-item:hover {
    transform: translateY(-5px);
    background: var(--color-white-08); /* Slightly lighter on hover */
    box-shadow: 0 15px 30px -10px var(--color-black-50);
    border-color: var(--color-aurora-1);
  }

  /* Stretched Link */
  .post-link::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .date {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-aurora-2);
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: block;
  }

  h2 {
    margin: 0.5rem 0 1rem 0;
    font-size: 2rem;
    background: linear-gradient(
      to right,
      var(--color-white),
      var(--color-text-strong)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: var(--color-transparent);
    transition: all 0.3s ease;
  }

  .post-item:hover h2 {
    background: linear-gradient(
      to right,
      var(--color-text-gradient-start),
      var(--color-text-gradient-end)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: var(--color-transparent);
  }

  p {
    color: var(--color-text-muted);
    line-height: 1.6;
    font-size: 1.1rem;
  }

  .meta {
    margin-top: 1.5rem;
    font-size: 0.9rem;
    color: var(--color-text-soft);
    font-weight: 500;
  }
</style>
