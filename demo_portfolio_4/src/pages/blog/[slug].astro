---
import { getCollection } from "astro:content";
import Alert from "../../components/mdx/Alert.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Blog`}>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <a href="/blog" class="back-link">← Yazılara Dön</a>
        <h1>{post.data.title}</h1>
        <div class="meta">
          <span class="author">{post.data.author}</span>
          <span class="separator">•</span>
          <time>{post.data.publishDate.toLocaleDateString()}</time>
        </div>
        <div class="tags">
          {post.data.tags.map((tag) => <span class="tag">#{tag}</span>)}
        </div>
      </div>
    </header>

    <div class="container content">
      <Content components={{ Alert }} />
    </div>
  </article>
</Layout>

<style>
  .post-header {
    padding: 4rem 0;
    background: linear-gradient(
      to bottom,
      var(--color-surface),
      var(--color-bg)
    );
    text-align: center;
    border-bottom: 1px solid var(--color-white-05);
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--color-text-muted);
  }

  h1 {
    font-size: 3rem;
    max-width: 900px;
    margin: 0 auto 1.5rem;
  }

  .meta {
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .separator {
    margin: 0 1rem;
    color: var(--color-primary);
  }

  .tags {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
  }

  .tag {
    color: var(--color-primary);
    font-size: 0.9rem;
  }

  .content {
    max-width: 800px;
    padding: 4rem 2rem;
    font-size: 1.15rem;
    line-height: 1.8;
  }

  /* Content Typography */
  .content :global(h2) {
    font-size: 2rem;
    margin: 3rem 0 1.5rem;
    color: var(--color-text);
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--color-text-subtle);
  }

  .content :global(ul) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-muted);
  }
</style>
