<Layout title="Experience | İsmet ALP">
  <section class="experience-hero">
    <div class="container">
      <div class="experience-header">
        <div class="experience-title">
          <span class="experience-eyebrow">
            <i18n lang="en" data-i18n="experience-eyebrow">Resume</i18n>
            <i18n lang="tr" hidden data-i18n="experience-eyebrow">
              Özgeçmiş
            </i18n>
          </span>
          <h1>
            <i18n lang="en" data-i18n="experience-title">Experience</i18n>
            <i18n lang="tr" hidden data-i18n="experience-title">Deneyim</i18n>
          </h1>
          <p>
            <i18n lang="en" data-i18n="experience-lead">
              A timeline of studios and projects pulled directly from the main
              projects catalog.
            </i18n>
            <i18n lang="tr" hidden data-i18n="experience-lead">
              Ana proje kataloğundan gelen stüdyo ve proje zaman çizelgesi.
            </i18n>
          </p>
        </div>
        <div class="experience-actions">
          <a class="btn experience-download" href={resumeUrl} download>
            <i18n lang="en" data-i18n="experience-download">
              Download Resume
            </i18n>
            <i18n lang="tr" hidden data-i18n="experience-download">
              Özgeçmişi indir
            </i18n>
          </a>
          <span class="experience-file">PDF</span>
        </div>
      </div>
      <div class="experience-note glass-panel">
        <p>
          <i18n lang="en" data-i18n="experience-nda">
            * NDA projects only include role summaries and high-level context.
            Visuals are representative images produced to describe the work.
          </i18n>
          <i18n lang="tr" hidden data-i18n="experience-nda">
            * işareti olan işler NDA kapsamındadır. Bu nedenle sadece yaptığım
            işin tanımı ve proje kapsamına dair temel özetler paylaşılır.
            Görseller, projeyi temsilen üretilmiş temsili görsellerdir.
          </i18n>
        </p>
      </div>
    </div>
  </section>

  <section class="experience-timeline">
    <div class="container">
      <div class="timeline-shell" data-timeline>
        <div class="timeline-axis" aria-hidden="true"></div>

        {
          experienceData.map((company) => (
            <section class="company-block" data-company={company.id}>
              <header class="company-header" data-align={company.align}>
                {company.align === "right" ? (
                  <>
                    <div class="company-ghost" />
                    <div class="company-node" data-reveal />
                    <div class="company-meta" data-reveal>
                      <span class="company-period">
                        <i18n lang="en">{company.period.en}</i18n>
                        <i18n lang="tr" hidden>
                          {company.period.tr}
                        </i18n>
                      </span>
                      <h2>{company.company}</h2>
                      <p>
                        <i18n lang="en">{company.role.en}</i18n>
                        <i18n lang="tr" hidden>
                          {company.role.tr}
                        </i18n>
                      </p>
                    </div>
                  </>
                ) : (
                  <>
                    <div class="company-meta" data-reveal>
                      <span class="company-period">
                        <i18n lang="en">{company.period.en}</i18n>
                        <i18n lang="tr" hidden>
                          {company.period.tr}
                        </i18n>
                      </span>
                      <h2>{company.company}</h2>
                      <p>
                        <i18n lang="en">{company.role.en}</i18n>
                        <i18n lang="tr" hidden>
                          {company.role.tr}
                        </i18n>
                      </p>
                    </div>
                    <div class="company-node" data-reveal />
                    <div class="company-ghost" />
                  </>
                )}
              </header>

              <div class="company-grid">
                {company.rows.map((row, rowIndex) => (
                  <div
                    class="company-row"
                    data-row={rowIndex}
                    data-has-featured={row.hasFeatured ? "true" : "false"}
                  >
                    {row.cards.map((card) => (
                      <div
                        class="exp-card-wrap"
                        data-reveal
                        style={`--card-span:${card.span}; --card-start:${card.start};`}
                      >
                        <article
                          class={`exp-card${card.featured ? " exp-card--featured" : ""}`}
                        >
                          <div class="card-image-wrapper">
                            <img
                              src={card.image}
                              alt={card.title.en}
                              class="card-image"
                              loading="lazy"
                            />
                            <div class="overlay" aria-hidden="true" />
                            {card.nda && (
                              <span class="exp-badge">
                                <i18n lang="en">NDA</i18n>
