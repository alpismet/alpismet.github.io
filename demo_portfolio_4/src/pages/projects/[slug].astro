---
import { getCollection } from "astro:content";
import MasonryGallery from "../../components/MasonryGallery.astro";
import VideoPlayer from "../../components/VideoPlayer.astro";
import Layout from "../../layouts/Layout.astro";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug ?? project.id },
    props: { project },
  }));
}

// 2. For your template, you can access the prop from the project
const { project } = Astro.props;
const { Content } = await project.render();
const dateEn = project.data.publishDate.toLocaleDateString("en-US");
const dateTr = project.data.publishDate.toLocaleDateString("tr-TR");
const categoryLabels = {
  "game-dev": { en: "Game Development", tr: "Oyun Geliştirme" },
  "3d-art": { en: "3D Art", tr: "3D Sanat" },
  "graphic-design": { en: "Graphic Design", tr: "Grafik Tasarım" },
  "physical-art": { en: "Physical Art", tr: "Fiziksel Sanat" },
  software: { en: "Software", tr: "Yazılım" },
  "video-production": { en: "Video Production", tr: "Video Prodüksiyon" },
};
const categoryLabel =
  project.data.category && categoryLabels[project.data.category];
---

<Layout title={`${project.data.title.en} | Gmd Popper`}>
  <div class="project-header">
    <div class="container">
      <a href="/" class="back-link">
        <i18n lang="en" data-i18n="project-back">← Back to home</i18n>
        <i18n lang="tr" hidden data-i18n="project-back">← Ana Sayfaya Dön</i18n>
      </a>
      <h1>
        <i18n lang="en" data-i18n="project-title">
          {project.data.title.en}
        </i18n>
        {
          project.data.title.tr && (
            <i18n lang="tr" hidden data-i18n="project-title">
              {project.data.title.tr}
            </i18n>
          )
        }
      </h1>
      <div class="meta">
        <time>
          <i18n lang="en" data-i18n="project-date">{dateEn}</i18n>
          <i18n lang="tr" hidden data-i18n="project-date">{dateTr}</i18n>
        </time>
        <div class="tags">
          {project.data.tags.map((tag) => <span class="tag">{tag}</span>)}
        </div>
      </div>
      {
        project.data.image && (
          <div class="hero-image">
              <img
                src={project.data.image}
              alt={project.data.title.en}
            />
          </div>
        )
      }
    </div>
  </div>

  {
    project.data.videoUrl && (
      <div class="container video-section">
        <h3>
          <i18n lang="en" data-i18n="project-video-title">Project Video</i18n>
          <i18n lang="tr" hidden data-i18n="project-video-title">Proje Videosu</i18n>
        </h3>
        <VideoPlayer videoUrl={project.data.videoUrl} />
      </div>
    )
  }

  {
    project.data.gallery && (
      <div class="container gallery-section">
        <h3>
          <i18n lang="en" data-i18n="project-gallery-title">
            Project Gallery
          </i18n>
          <i18n lang="tr" hidden data-i18n="project-gallery-title">
            Proje Galerisi
          </i18n>
        </h3>
        <MasonryGallery images={project.data.gallery} />
      </div>
    )
  }

  <div class="container content-wrapper">
    <article class="prose">
      <Content />
    </article>

    <aside class="sidebar">
      <div class="sticky-box">
        <h3>
          <i18n lang="en" data-i18n="project-details-title">
            Project Details
          </i18n>
          <i18n lang="tr" hidden data-i18n="project-details-title">
            Proje Detayları
          </i18n>
        </h3>
        <ul class="details-list">
          {
            categoryLabel && (
              <li>
                <strong>
                  <i18n lang="en" data-i18n="project-category-label">
                    Category:
                  </i18n>
                  <i18n lang="tr" hidden data-i18n="project-category-label">
                    Kategori:
                  </i18n>
                </strong>
                <span class="category-badge">
                  <i18n lang="en" data-i18n="project-category-value">
                    {categoryLabel.en}
                  </i18n>
                  <i18n lang="tr" hidden data-i18n="project-category-value">
                    {categoryLabel.tr}
                  </i18n>
                </span>
              </li>
            )
          }
          <li>
            <strong>
              <i18n lang="en" data-i18n="project-date-label">Date:</i18n>
              <i18n lang="tr" hidden data-i18n="project-date-label">Tarih:</i18n>
            </strong>
            <span>
              <i18n lang="en" data-i18n="project-date-detail">{dateEn}</i18n>
              <i18n lang="tr" hidden data-i18n="project-date-detail">{dateTr}</i18n>
            </span>
          </li>
          {
            project.data.githubUrl && (
              <li>
                <strong>
                  <i18n lang="en" data-i18n="project-source-label">
                    Source Code:
                  </i18n>
                  <i18n lang="tr" hidden data-i18n="project-source-label">
                    Kaynak Kod:
                  </i18n>
                </strong>
                <a href={project.data.githubUrl} target="_blank">
                  <i18n lang="en" data-i18n="project-source-link">
                    View on GitHub
                  </i18n>
                  <i18n lang="tr" hidden data-i18n="project-source-link">
                    GitHub'da İncele
                  </i18n>
                </a>
              </li>
            )
          }
          {
            project.data.demoUrl && (
              <li>
                <strong>
                  <i18n lang="en" data-i18n="project-demo-label">
                    Live Demo:
                  </i18n>
                  <i18n lang="tr" hidden data-i18n="project-demo-label">
                    Canlı Demo:
                  </i18n>
                </strong>
                <a href={project.data.demoUrl} target="_blank">
                  <i18n lang="en" data-i18n="project-demo-link">
                    Play / Download
                  </i18n>
                  <i18n lang="tr" hidden data-i18n="project-demo-link">
                    Oyna / İndir
                  </i18n>
                </a>
              </li>
            )
          }
        </ul>
      </div>
    </aside>
  </div>
</Layout>

<style>
  .project-header {
    padding: 4rem 0 2rem;
    background: linear-gradient(
      to bottom,
      var(--color-bg),
      var(--color-surface)
    );
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .meta {
    display: flex;
    gap: 2rem;
    align-items: center;
    margin-bottom: 3rem;
    color: var(--color-text-muted);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background: var(--color-white-10);
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    font-size: 0.85rem;
  }

  .hero-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--color-white-10);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 4rem;
    padding: 4rem 2rem;
  }

  /* Typography for MDX Content */
  .prose {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(pre) {
    background: var(--color-surface-code) !important;
    padding: 1.5rem;
    border-radius: var(--radius-md);
    overflow-x: auto;
    border: 1px solid var(--color-white-10);
    margin: 2rem 0;
  }

  .sticky-box {
    position: sticky;
    top: 6rem;
    background: var(--color-surface);
    padding: 2rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-white-05);
  }

  .details-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0 0;
  }

  .details-list li {
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
  }

  .details-list strong {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
  }

  @media (max-width: 900px) {
    .content-wrapper {
      grid-template-columns: 1fr;
    }

    .sticky-box {
      position: static;
    }
  }
</style>
