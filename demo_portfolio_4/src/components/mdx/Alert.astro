---
interface Props {
  type?: "info" | "warning" | "error" | "success";
  title?: string;
}

const { type = "info", title } = Astro.props;

const colors = {
  info: "border-blue-500 bg-blue-500/10 text-blue-200",
  warning: "border-yellow-500 bg-yellow-500/10 text-yellow-200",
  error: "border-red-500 bg-red-500/10 text-red-200",
  success: "border-green-500 bg-green-500/10 text-green-200",
}[type];
---

<div class={`alert ${type}`}>
  {title && <div class="alert-title">{title}</div>}
  <div class="alert-content">
    <slot />
  </div>
</div>

<style>
  .alert {
    padding: 1rem 1.5rem;
    border-left: 4px solid;
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
    margin: 1.5rem 0;
    background: var(--color-white-05); /* Fallback */
  }

  /* Tema renkleri (Vanilla CSS) */
  .alert.info {
    border-color: var(--color-alert-info);
    background: var(--color-alert-info-10);
  }
  .alert.warning {
    border-color: var(--color-alert-warning);
    background: var(--color-alert-warning-10);
  }
  .alert.error {
    border-color: var(--color-alert-danger);
    background: var(--color-alert-danger-10);
  }
  .alert.success {
    border-color: var(--color-alert-success);
    background: var(--color-alert-success-10);
  }

  .alert-title {
    font-weight: bold;
    margin-bottom: 0.5rem;
    font-size: 1.1em;
  }
</style>
