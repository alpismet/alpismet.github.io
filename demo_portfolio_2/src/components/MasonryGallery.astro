---
interface Props {
  images: string[];
}

const { images } = Astro.props;
---

<div class="masonry-grid">
  {
    images.map((img, index) => (
      <div class={`masonry-item item-${index % 5}`}>
        <img src={img} alt="" loading="lazy" />
      </div>
    ))
  }
</div>

<style>
  .masonry-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-auto-rows: 200px;
    gap: 1rem;
    margin: 2rem 0;
  }

  .masonry-item {
    background: var(--color-bg);
    border: var(--border-width) solid var(--color-border);
    position: relative;
    overflow: hidden;
  }

  .masonry-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: all 0.2s ease;
  }

  .masonry-item:hover img {
    filter: grayscale(0%);
    transform: none;
  }

  .masonry-item:hover {
    box-shadow: 6px 6px 0px var(--color-text);
    transform: translate(-3px, -3px);
  }

  /* Bazı öğeleri daha büyük yapıp düzensiz (masonry) bir his verelim */
  .item-0 {
    grid-row: span 2;
    grid-column: span 2;
  }
  .item-3 {
    grid-row: span 2;
  }

  @media (max-width: 600px) {
    .item-0 {
      grid-column: auto;
      grid-row: auto;
    }
    .item-3 {
      grid-row: auto;
    }
  }
</style>
