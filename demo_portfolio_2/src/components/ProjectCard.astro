---
import type { CollectionEntry } from "astro:content";
// Image bileşeni için Astro'nun kendi optimizasyonunu kullanalım
// Ancak şu an resim dosyalarımız yok, placeholder kullanacağız.
// Gerçek projede: import { Image } from 'astro:assets';

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<article class="project-card">
  <div class="card-image-wrapper">
    <!-- Placeholder image: Unsplash source -->
    <img
      src={`https://source.unsplash.com/random/800x600?${project.data.tags[0]}`}
      alt={project.data.title}
      class="card-image"
      loading="lazy"
    />
    <div class="overlay">
      <a href={`/projects/${project.slug}`} class="btn">İncele</a>
    </div>
  </div>
  <div class="card-content">
    <div class="card-meta">
      <span class="date">{project.data.publishDate.toLocaleDateString()}</span>
    </div>
    <h3><a href={`/projects/${project.slug}`}>{project.data.title}</a></h3>
    <p>{project.data.description}</p>
    <div class="tags">
      {project.data.tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--color-bg);
    border: var(--border-width) solid var(--color-border);
    transition: all 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0px var(--color-text);
  }

  .card-image-wrapper {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-bottom: var(--border-width) solid var(--color-border);
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.3s;
  }

  .project-card:hover .card-image {
    filter: grayscale(0%);
  }

  .overlay {
    display: none; /* Basit tut */
  }

  .card-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-meta {
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  h3 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  h3 a {
    text-decoration: none;
  }

  h3 a:hover {
    background: var(--color-primary);
  }

  p {
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.25rem 0.5rem;
    background: var(--color-text);
    color: var(--color-bg);
    font-family: var(--font-mono);
  }
</style>
