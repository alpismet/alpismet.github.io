<style>
  /* Handwriting font import (Allura) */
  @import url("https://fonts.googleapis.com/css2?family=Allura&display=swap");

  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;
    padding-right: 10px; /* extra horizontal space to avoid masking on the right */
    overflow: visible;
    transform: scale(1.05);
  }

  @media (max-width: 767.9px) {
    .logo-container {
      margin-top: 0.125rem;

      transform-origin: 0%;
      transform: scale(0.95);
    }
  }

  .logo-container svg {
    height: 2rem;
  }

  .logo-text {
    display: inline-flex;
    align-items: center;
  }
  .handwritten {
    font-family:
      "Allura",
      "Segoe UI",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Helvetica Neue",
      Arial,
      sans-serif;
    font-weight: 400; /* Allura regular */
    letter-spacing: 0.35px;
    font-size: clamp(2.3rem, 5vw, 3rem); /* max ~48px */
    line-height: 0.95;
    white-space: nowrap;
  }
  @media (max-width: 767.9px) {
    .handwritten {
      font-size: clamp(2rem, 8vw, 2.6rem);
    }
  }
</style>
